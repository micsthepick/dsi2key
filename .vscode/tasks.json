        {
            "label": "DSI wifiboot",
            "type": "process",
            "command": "dslink",
            "args": [
                "./client/ds2key.dsi"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "DSI emulator",
            "type": "process",
            "command": "wine",
            "dependsOn": "Make dsi",
            "windows": {
                "options": {
                    "cwd": "${env:USERPROFILE}/Applications/no$"
                },
                "command": "PowerShell.exe",
                //"args": [
                //    "..\\..\\source\\repos\\DSI2KEY\\client\\ds2key.dsi"
                //]
            },
            "options": {
                "cwd": "${userHome}/Apps/no$",
            },
            "args": [
                ".\\NO$GBA.EXE",
                "..\\..\\source\\repos\\DSI2KEY\\client\\ds2key.dsi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}